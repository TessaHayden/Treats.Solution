@{
  Layout = "_Layout";
}

@model FlavorsNTreats.Models.Treat

<h2>Edit</h2>
<h3>Edit this Treat: @Html.DisplayFor(model => model.Name)</h3>
<hr width="50%" />

@using (Html.BeginForm())
{
