@{
  Layout = "_Layout";
}

@using FlavorsNTreats.Models

<h1 class="index-h1">Flavors</h1>
<hr width="50%"/>
@if(@Model.Count == 0)
{
  <h3>There are no Flavors</h3>
}
else
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Type}", "Details", new {id = flavor.FlavorId})</li>
    }
  </ul>
}

<div class="page-links">
  <p>@Html.ActionLink("Create a flavor type", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>